@model BookShopWeb.Models.ReportViewModel
@{
    ViewBag.Title = "GetReport";
}
<h3>
    Report</h3>
<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" media="all" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.ui.datepicker-ru.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#MinDate").datepicker();
        $("#MaxDate").datepicker();
    });
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend></legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.MinDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MinDate)
            @Html.ValidationMessageFor(model => model.MinDate)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.MaxDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaxDate)
            @Html.ValidationMessageFor(model => model.MaxDate)
        </div>
        <p>
            <input type="submit" value="Get" />
        </p>
    </fieldset>
}
@if (Model.ReportA != null)
{
    <div>
        Total Income @(Model.TotalIncome)</div>
    <ul>
        @foreach (var reportRecord in Model.ReportA)
        {
            <li>@reportRecord.Quantity books of @reportRecord.Author where sold</li>
        }
    </ul>
}
@if (Model.ReportB != null)
{
    <ul>
        @foreach (var reportRecord in Model.ReportB)
        {
            <li>@reportRecord.Quantity books by @reportRecord.Theme theme where sold</li>
        }
    </ul>
}
<div class="action-links">
    <p>
        @Html.ActionLink("Back to List", "List")
    </p>
</div>
